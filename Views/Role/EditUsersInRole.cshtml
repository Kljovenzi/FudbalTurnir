@using Ticketing_System_CV.Models.ViewModel.AdministrationVIewModels
@model List<UserRoleViewModel>

@{
	ViewBag.Title = "Edit Users in Role";
	var roleId = ViewBag.roleId;
}

<form method="post">
	<div class="card">
		<div class="card-header">
			Add or remove users in role
		</div>
		<div class="card-body">
			@for (int i = 0 ; i < Model.Count ; i ++)
			{
				<div class="form-check m-1">
					<input type="hidden" asp-for="@Model[i].UserId">
					<input type="hidden" asp-for="@Model[i].UserName">
					<input asp-for="@Model[i].IsSelected" type="checkbox" class="form-check-input">
					<label asp-for="@Model[i].UserName" class="form-check-label">@Model[i].UserName</label>
				</div>
			}
		</div>
		<div class="card-footer text-body-secondary">
			<input type="submit" value="Update" class="btn btn-primary"/>
			<a asp-action="ListRoles" asp-controller="Role"  class="btn btn-danger">Cancel</a>
		</div>
	</div>
</form>
