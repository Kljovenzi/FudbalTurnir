@model CreateTimViewModel
@{
	ViewBag.Title ="Update tim";
	var timId = ViewBag.TimId;
}

<div class="row">
	<div class="col-md-12">
		<form method="post">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Ime"></label>
				<input asp-for="Ime" class="form-control" value="@Model.Ime"/>
				<span asp-validation-for="Ime" class="text-danger"></span>
			</div>
			<br />
			<button type="submit" class="btn btn-warning">Izmeni</button>
		</form>
		<a asp-action="PregledTimova" asp-controller="Turnir" class="btn btn-danger mb-2">Povratak</a>
	</div>
</div>