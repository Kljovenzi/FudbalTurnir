@model List<IgracTimViewModel>
@{
	ViewBag.Title = "Dodaj igrace u Tim";
	var timId = ViewBag.TimId;
}
<form method="post">
	<div class="card">
		<div class="card-header">
			Dodaj ili izbaci igraca
		</div>
		<div class="card-body">
			@for (int i = 0; i < Model.Count ; i++)
			{
				<div class="form-check m-1">
					<input type="hidden" asp-for="@Model[i].IgracName">
					<input type="hidden" asp-for="@Model[i].IgracId">
					<input asp-for="@Model[i].IsSelected" type="checkbox" class="form-check-input">
					<label asp-for="@Model[i].IgracName" class="form-check-label">@Model[i].IgracName</label>
				</div>
			}
		</div>
		<div class="card-footer text-body-secondary">
			<input type="submit" value="Update" class="btn btn-primary" />
			<a asp-action="PregledTimova" asp-controller="Turnir" class="btn btn-danger">Cancel</a>
		</div>
	</div>
</form>
