@model CreateTurnirViewModel
@{
	ViewBag.Title = "Create Turnir";
}

<div class="d-flex justify-content-center">
	<form method="post">
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="form-group">
			<label asp-for="Ime">Ime turnira</label>
			<input asp-for="Ime" class="form-control" style="width: 250px;" />
			<span asp-validation-for="Ime" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary mt-1">Create</button>
	</form>
</div>

