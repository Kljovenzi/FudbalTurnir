@model CreateIgracViewModel
@{
	ViewBag.Title = "Update Igrac";
	var igracId = ViewBag.TimId;
}
<h1>Napravi Igraca</h1>

<div class="row">
	<div class="col-md-12">
		<form method="post">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Ime"></label>
				<input asp-for="Ime" class="form-control" value="@Model.Ime"/>
				<span asp-validation-for="Ime" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Prezime"></label>
				<input asp-for="Prezime" class="form-control" value="@Model.Prezime"/>
				<span asp-validation-for="Prezime" class="text-danger"></span>
			</div>
			<br />
			<button type="submit" class="btn btn-warning">Izmeni</button>
		</form>
	</div>
</div>